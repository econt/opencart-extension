{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_econt_payment_total" value="{{ payment_econt_payment_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_econt_payment_order_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_econt_payment_order_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_econt_payment_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_econt_payment_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_econt_payment_status" id="input-status" class="form-control">
                {% if payment_econt_payment_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <!-- payment title -->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-econt-payment-title">{{ text_payment_econt_payment_title_label }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_econt_payment_title" value="{{ payment_econt_payment_title }}" id="input-econt-payment-title" class="form-control" />
            </div>
          </div>
          <!-- payment logo -->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-econt-payment-logo">{{ text_payment_econt_payment_logo_label }}</label>
            <div class="col-sm-10">
              <select name="payment_econt_payment_logo" id="input-econt-payment-logo" class="form-control">
                <option value="">---</option>
                {% if (payment_econt_payment_logo == 'dark') %}
                  <option value="dark" selected="selected">{{ text_payment_econt_payment_logo_dark_label }}</option>
                {% else %}
                  <option value="dark">{{ text_payment_econt_payment_logo_dark_label }}</option>
                {% endif %}
                {% if (payment_econt_payment_logo == 'light') %}
                  <option value="light" selected="selected">{{ text_payment_econt_payment_logo_light_label }}</option>
                {% else %}
                  <option value="light">{{ text_payment_econt_payment_logo_light_label }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <!-- payment description -->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-econt-payment-description">{{ text_payment_econt_payment_description_label }}</label>
            <div class="col-sm-10">
              <textarea name="payment_econt_payment_description" id="input-econt-payment-description" class="form-control">{{ payment_econt_payment_description }}</textarea>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_econt_payment_sort_order" value="{{ payment_econt_payment_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<style>
  #input-econt-payment-logo-image {
    margin-top: 10px;
    padding: 10px;
    background-color: #dbd9d9;
    border-radius: 3px;
  }
  #input-econt-payment-logo-image.hide {
    display: none;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    let logoImageBaseURL = '/catalog/view/theme/default/image';
    function iconFieldChange() {
      if (!icon) {
        icon = document.createElement('img');
        icon.setAttribute('id', 'input-econt-payment-logo-image');
        icon.setAttribute('class', 'hide');
        iconField.parentNode.insertBefore(icon, iconField.nextSibling);
      }

      let selectedIndexValue = iconField.options[iconField.selectedIndex].value;
      if (selectedIndexValue === '') icon.classList.add('hide');
      else {
        icon.setAttribute('src', logoImageBaseURL + '/econt_payment_logo_' + selectedIndexValue + '.png');
        icon.classList.remove('hide');
      }
    }
    let icon;
    let iconField = document.querySelector('#input-econt-payment-logo')
    iconField.addEventListener('change', iconFieldChange);
    iconFieldChange();
  })
</script>
{{ footer }} 